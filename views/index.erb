      <div class="container">

        <div class="row">

          <div class="span8">
           <img  src="img/JMU.jpg">
         </div>

         <div class="span4">
          <form class="form-signin" method="post" action="/">
            <h2 class="form-signin-heading">Por favor logue</h2>
            <input type="text" class="input-block-level" placeholder="Nome do usuário" name="name_conteudo">
            <input type="password" class="input-block-level" placeholder="Senha" name="pass_conteudo">
            <label class="checkbox">
              <input type="checkbox" value="remember-me"> Relembra-me
            </label>

            <button class="btn btn-large btn-primary" type="submit">Logar</button>
            <button class="btn btn-large btn-primary" type="submit">Limpar</button>

            <a class="btn btn-large btn-primary" href="/cadastro">Cadastrar</a>

          </form>

        </div>
